<p id="notice"><%= notice %></p>
<div class="container">
<div class="field">
  <%= form_for :thing, method: :get do |f| %>
    <%= f.text_field :search_city %>
    <%= f.submit 'Search' %>
  <% end %>
</div>
<br />


<h1>Saved Weathers</h1>

<table>
  <thead>
    <tr>
      <th>Yahoo title</th>
      <th>Yahoo text</th>
      <th>Yahoo temp</th>
      <th>owm cloud</th>
      <th>owm min</th>
      <th>owm max</th>
      <th colspan="1"></th>
    </tr>
  </thead>
  <tbody>
    <% @saved_weathers.each do |saved_weather| %>
      <tr>
        <td><%= saved_weather.yahoo_title %></td>
        <td><%= saved_weather.yahoo_text %></td>
        <td><%= saved_weather.yahoo_temp %></td>
        <td><%= saved_weather.owm_cloud %></td>
        <td><%= saved_weather.owm_min %></td>
        <td><%= saved_weather.owm_max %></td>
        <td><%= link_to 'Destroy', saved_weather, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
